doctype html
html(lang='fr')
    head
        meta(charset='utf-8')    
        meta(http-equiv='X-UA-Compatible', content='IE=edge')   
        meta(name='viewport', content='width=device-width, initial-scale=1')  
        meta(name='description', content="#{ pageDescription }")  
        meta(name='keywords', content="#{ pageKeywords }")  
        meta(name='author', content="#{ pageAuthors }")
        meta(property='og:image' content="#{ pageOgImage }") 
        meta(property='og:title' content="#{ pageTitle }")
        meta(property='og:description' content="#{ pageDescription }")
        link(rel='icon', href='/favicon.ico')   
        link(rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Rosario:normal,italic,bold,bolditalic")
        link(rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Pacifico:normal,italic,bold,bolditalic&text=MAYIZOma@yizo.comCOM")
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css')
        link(href='/stylesheets/main.css', rel='stylesheet')
        block moreStylesheets
        // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
        <!--[if lt IE 9]>
        script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
        script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
        <![endif]-->
        title #{ pageTitle } - M@yizo.com
    body
        div(class="body-wrap")
            nav(class='navbar navbar-inverse navbar-fixed-top')
                div(class='container')
                    div(class='navbar-header')
                        button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
                            span(class='sr-only') Toggle navigation
                            span(class='icon-bar')
                            span(class='icon-bar')
                            span(class='icon-bar')
                        a(class='navbar-brand' href='/')
                            svg(xmlns='http://www.w3.org/2000/svg' width='185px' height='45px')
                                title Mayizo.com
                                text(y="28" style="fill: #ffffff;") M@yizo.com
                    div(id='navbar' class='navbar-collapse collapse')
                        ul(class='nav navbar-nav') 
                            li
                                a(href='/' class='glyphicon glyphicon-home')
                                    span(class='icon-left') Acceuil
                            li
                                a(href='/archives' class='glyphicon glyphicon-th-large')
                                    span(class='icon-left') Archives
                                
                        form(class='navbar-form navbar-right' role='search' action='/search' method='get')
                            div(class='form-group')
                                input(type='text' name='term' class='form-control' placeholder='Rechercher ...')
                            button(type='submit' class='btn btn-default btn-sm')
                                span(class='glyphicon glyphicon-search' aria-hidden='true')
                                
                        ul(class='nav navbar-nav navbar-right')
                            if isAuthenticated
                                li
                                    a(href='/account/logout') Logout
                            li 
                                a(href='/about-us') Qui sommes-nous?
                            li 
                                a(href='/contact-us') Contact
                                
            block content
            
        footer 
            div(class='footer')
                hr
                block footer
                    p &copy; M@yizo.com 2015
                    
        block moreScripts
            script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
            script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
            // IE10 viewport hack for Surface/desktop Windows 8 bug
            script(src='/javascripts/ie10-viewport-bug-workaround.js')
        script.
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
