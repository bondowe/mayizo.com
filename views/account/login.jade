extends ../layout

block content
     
    div(class='container center-block main-form small-form') 

        form(method="post" action="/account/login" enctype="application/x-www-form-urlencoded")
            
            h1 Connexion
            hr
            
            if errorMessage
                div(class="alert alert-danger" role="alert")= errorMessage
            
            div(class="form-group")
                label(for="userEmail") Adresse email
                input(type="email" class="form-control" name="user[email]" id="userEmail" required placeholder="Votre adresse email")
                
            div(class="form-group")
                label(for="userPassword") Mot de passe
                input(type="password" class="form-control" name="user[password]" id="userPassword" required placeholder="Votre mot de passe")

            button(type="submit" class="btn btn-default") Connexion
            
            p(class="help-block") Vous n'avez pas de compte? 
                a(href="/account/register") Enregistrez-vous

                