extends ../layout

block content
     
    div(class='container center-block main-form') 

        form(method="post" action="/accounts/login" enctype="application/x-www-form-urlencoded")
            
            h1 Connexion
            
            div(class="form-group")
                label(for="email") Adresse email
                input(type="email" class="form-control" name="email" required placeholder="Votre adresse email")
                
            div(class="form-group")
                label(for="password") Mot de passe
                input(type="password" class="form-control" name="password" required placeholder="Votre mot de passe")

            button(type="submit" class="btn btn-default btn-lg active") Connexion
            
            p(class="help-block") Vous n'avez pas de compte? 
                a(href="/accounts/register") Enregistrez-vous

                